<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".petugas.spp.TambahSpp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_red_lancip"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/kembali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/back_button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:text="Data SPP"
                android:textColor="@color/neutral_white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:text="Tambah SPP"
            android:textColor="#FF0000"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tambahsppLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">


        <TextView
            android:id="@+id/tv_idSPP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID SPP"
            android:textColor="#3D3E49"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/idSPP"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape"
            android:ems="12"
            android:hint="ID SPP"
            android:inputType="number"
            android:padding="13sp"
            android:textColor="#6E6E77"
            android:textColorHint="#3D3E49"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_angkatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Angkatan"
            android:textColor="#3D3E49"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/angkatan"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape"
            android:ems="12"
            android:hint="Angkatan"
            android:inputType="text"
            android:padding="13sp"
            android:textColor="#6E6E77"
            android:textColorHint="#3D3E49"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_tahun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Tahun"
            android:textColor="#3D3E49"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tahun"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape"
            android:ems="12"
            android:hint="Tahun"
            android:inputType="text"
            android:padding="13sp"
            android:textColor="#6E6E77"
            android:textColorHint="#3D3E49"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_nominal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Nominal"
            android:textColor="#3D3E49"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/nominal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape"
            android:ems="12"
            android:hint="Nominal"
            android:inputType="text"
            android:padding="13sp"
            android:textColor="#6E6E77"
            android:textColorHint="#3D3E49"
            android:textSize="14sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_red"
            android:text="SIMPAN" />

    </LinearLayout>

</LinearLayout>