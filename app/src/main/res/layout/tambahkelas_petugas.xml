<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.petugas.kelas.TambahKelas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:text="Tambah Kelas"
            android:textColor="#FF0000"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tambahkelasLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">


        <TextView
            android:id="@+id/tv_idKelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Kelas"
            android:textColor="#3D3E49"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/idKelas"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape"
            android:ems="12"
            android:hint="Nama Kelas"
            android:inputType="text"
            android:padding="13sp"
            android:textColor="#6E6E77"
            android:textColorHint="#3D3E49"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_jurusan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Jurusan"
            android:textColor="#3D3E49"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/jurusan"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape"
            android:ems="12"
            android:hint="Jurusan"
            android:inputType="text"
            android:padding="13sp"
            android:textColor="#6E6E77"
            android:textColorHint="#3D3E49"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_angkatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Angkatan"
            android:textColor="#3D3E49"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/angkatan"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape"
            android:ems="12"
            android:hint="Angkatan"
            android:inputType="number"
            android:padding="13sp"
            android:textColor="#6E6E77"
            android:textColorHint="#3D3E49"
            android:textSize="14sp" />

        <Button
            android:id="@+id/simpanKelas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_red"
            android:text="SIMPAN" />

    </LinearLayout>
</LinearLayout>