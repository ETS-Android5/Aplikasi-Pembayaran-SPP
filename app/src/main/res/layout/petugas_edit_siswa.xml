<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.petugas.siswa.EditSiswa">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <ScrollView
        android:id="@+id/scrollview2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#00000000"
                    android:text="Tambah Siswa"
                    android:textColor="#FF0000"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tambahsiswaLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">


                <TextView
                    android:id="@+id/tv_NISN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NISN"
                    android:textColor="#3D3E49"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/NISN"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape"
                    android:ems="12"
                    android:hint="NISN"
                    android:inputType="text"
                    android:maxLength="10"
                    android:padding="13sp"
                    android:textColor="#6E6E77"
                    android:textColorHint="#3D3E49"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_NIS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="NIS"
                    android:textColor="#3D3E49"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/NIS"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape"
                    android:ems="12"
                    android:hint="NIS"
                    android:inputType="text"
                    android:maxLength="8"
                    android:padding="13sp"
                    android:textColor="#6E6E77"
                    android:textColorHint="#3D3E49"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_namaSiswa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Nama"
                    android:textColor="#3D3E49"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/namaSiswa"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape"
                    android:ems="12"
                    android:hint="Nama"
                    android:inputType="text"
                    android:padding="13sp"
                    android:textColor="#6E6E77"
                    android:textColorHint="#3D3E49"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Password"
                    android:textColor="#3D3E49"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape"
                    android:ems="12"
                    android:hint="Password"
                    android:inputType="text"
                    android:maxLength="35"
                    android:padding="13sp"
                    android:textColor="#6E6E77"
                    android:textColorHint="#3D3E49"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Alamat"
                    android:textColor="#3D3E49"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/alamat"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape"
                    android:ems="12"
                    android:hint="Alamat"
                    android:inputType="text"
                    android:padding="13sp"
                    android:textColor="#6E6E77"
                    android:textColorHint="#3D3E49"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_telp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="No. Telp"
                    android:textColor="#3D3E49"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/telp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape"
                    android:ems="12"
                    android:hint="No. Telp"
                    android:inputType="number"
                    android:maxLength="13"
                    android:padding="13sp"
                    android:textColor="#6E6E77"
                    android:textColorHint="#3D3E49"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/simpanSiswa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/shape_red"
                    android:text="SIMPAN" />

                <ImageButton
                    android:id="@+id/hapusSiswa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/buttonsecondary"
                    android:text="HAPUS" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>