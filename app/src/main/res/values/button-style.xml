<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--====================-->
    <!--    LARGE BUTTON    -->
    <!--====================-->

    <!--Large Button-Fill-->
    <style name="SPPKelompok2.Button.Large" parent="Widget.Material3.Button.UnelevatedButton">
        <!--Font-->
        <item name="android:fontFamily">@font/poopins_semibold</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textSize">16sp</item>

        <!--Padding-->
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingStart">120dp</item>
        <item name="android:paddingEnd">120dp</item>

        <!--Radius button-->
        <item name="cornerRadius">24dp</item>

        <!--Icon Tint-->
        <item name="iconTint">?colorPrimaryVariant</item>
    </style>

    <!--Large Button-White-->
    <style name="SPPKelompok2.Button.Large.White" parent="SPPKelompok2.Button.Large">
        <item name="backgroundTint">?colorPrimaryVariant</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <!--Large Button-Outline-->
    <style name="SPPKelompok2.Button.Large.Outline" parent="SPPKelompok2.Button.Large">
        <!--Font-->
        <item name="android:fontFamily">@font/poopins_semibold</item>
        <item name="android:textColor">?android:colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">?colorSurface</item>

        <!--Padding-->
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingStart">120dp</item>
        <item name="android:paddingEnd">120dp</item>

        <!--Radius button-->
        <item name="cornerRadius">24dp</item>

        <!--Stroke-->
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">?android:colorPrimary</item>

        <!--Icon Tint-->
        <item name="iconTint">?colorPrimaryVariant</item>
    </style>

